<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_current_task_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/widget_background_rounded">

    <!-- Active task state -->

    <!-- Left: Circular progress ring (rendered as bitmap) -->
    <ImageView
        android:id="@+id/progress_ring"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:contentDescription="Progress ring"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <!-- Right side content: task name, current step -->
    <LinearLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/progress_ring"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_section"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingTop="2dp">

        <!-- Task name with icon -->
        <TextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:textColor="#888888"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            android:visibility="gone" />

        <!-- Current step -->
        <TextView
            android:id="@+id/current_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to start"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.15"
            android:layout_marginTop="2dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Bottom: short progress bar + motivational text -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/progress_ring"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_progress_fill"
            android:visibility="gone" />

        <TextView
            android:id="@+id/motivational_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="10sp"
            android:textColor="#FF6B6B"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="6dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to start?"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to break down a task"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</RelativeLayout>
