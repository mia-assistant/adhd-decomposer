<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_current_task_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    android:background="@drawable/widget_background_rounded">

    <!-- Top: task name + progress percent -->
    <LinearLayout
        android:id="@+id/header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/task_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No active task"
            android:textSize="12sp"
            android:textColor="#555555"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:textColor="#2A9D8F"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Step counter -->
    <TextView
        android:id="@+id/progress_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_row"
        android:text=""
        android:textSize="10sp"
        android:textColor="#999999"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="1dp"
        android:visibility="gone" />

    <!-- Current step with accent bar — positioned below header, above bottom -->
    <LinearLayout
        android:id="@+id/step_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_text"
        android:layout_above="@id/bottom_section"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/accent_bar"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/widget_accent_bar"
            android:contentDescription="@null"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/current_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tap to start"
            android:textSize="15sp"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.15"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Bottom: progress bar + motivational text -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_progress_fill"
            android:visibility="gone" />

        <TextView
            android:id="@+id/motivational_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="#FF6B6B"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to start?"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to break down a task"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</RelativeLayout>
